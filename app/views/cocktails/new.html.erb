<div class="container">
<%= simple_form_for (@cocktail) do |f| %>
<h3> Create a new delicious cocktail</h3>
  <% if @cocktail.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @cocktail.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
  <%= f.input :name, label: 'Name of your cocktail', error: 'Cocktail name is mandatory, please specify one', class: 'form-control'%>
  </div>
  <%= f.button :submit, class: 'btn btn-primary'%>
<% end %>
</div>
