<div class="banner" style="background-image: linear-gradient(-225deg, #090909bd 0%, rgba(0, 36, 61, 0.86) 50%), url('https://images.pexels.com/photos/4295/black-and-white-alcohol-bar-drinks.jpg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');">
<div class="container">
<h1 class="list">Our incredible list of Cocktails</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <!-- insert <div class="card"> -->
      <div class="card" style="">
        <div class="card-category">Popular</div>
        <div class="card-description">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
        <%= link_to '<i class="far fa-times-circle" style="font-size:16px;"></i>'
        .html_safe, cocktail_path(cocktail), class: "card-user delete",
        method: :delete,
        data: { confirm: "Are you sure?" } %>
      </div>
    </div>
    <% end %>
  </div>
  <button class="btn btn-primary add-ck"><%= link_to "Create a cocktail", new_cocktail_path %></button>
</div>
