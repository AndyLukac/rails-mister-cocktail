<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/613037/pexels-photo-613037.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260'); height: 40vh"><h1><%= @cocktail.name %></h1></div>
<div class="container">
<div class="row">
  <div class="col-xs-6">
    <h3 style= "padding-bottom: 20px";> Description</h3>
    <%= link_to "Back to all cocktails", cocktails_path %>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <p>
            <span><%= dose.ingredient.name %></span>
            <small><%= dose.description %></small>
          </p>
        </li>
      <% end %>
    </ul>
  <%= link_to "Add new dose", new_cocktail_dose_path(@cocktail) %>
  </div>
  <div class="col-xs-6">
    <% @cocktail.doses.each do |dose| %>
    <%= dose.ingredient.name %>
    <%= dose.description %>
    <%= link_to '<i class="fas fa-trash-alt" style="font-size:12px;"></i>'
    .html_safe, dose_path(@path),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
   <% end %>
  </div>
</div>
</div>
